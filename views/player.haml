%div.box
  %div.now-playing-container
    %div.now-playing
      %div
        %img#image{ src: image }
      %div.song-info
        %div
          %h1#song= title
          %h2#artist= "Artist: #{artist}"
        %div#note
    %div#progress_container
      %div#time_remaining= time_remaining
      %div#progress_bar{ :style => "width: #{progress_percentage}%" }
        = " "
